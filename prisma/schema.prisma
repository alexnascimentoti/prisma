generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Deliveryman {
  id         Int          @id @default(autoincrement())
  username   String       @unique @map("user_name")
  password   String
  Deliveries Deliveries[]

  @@map("deliveryman")
}

model Clients {
  id         Int          @id @default(autoincrement())
  username   String       @unique @map("user_name")
  password   String
  Deliveries Deliveries[]

  @@map("clients")
}

model Deliveries {
  id            Int         @id @default(autoincrement())
  client        Clients     @relation(fields: [idClient], references: [id])
  idClient      Int         @map("id_client")
  deliverman    Deliveryman @relation(fields: [idDeliveryman], references: [id])
  idDeliveryman Int         @map("id_deliveryman")
  itemName      String      @map("item_name")
  createdAt     DateTime    @default(now()) @map("created_at")
  endAt         DateTime    @map("end_at")

  @@map("deliveries")
}
